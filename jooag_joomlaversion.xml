<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="plugin" group="content" method="upgrade">
	<name>JooAg JoomlaVersion</name>
	<author>joomla-agentur.de - Ufuk Avcu</author>
	<creationDate>15.09.2014</creationDate>
	<copyright>Copyright (C) 2009 - 2015 JooAg. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>info@joomla-agentur.de</authorEmail>
	<authorUrl>www.joomla-agentur.de</authorUrl>
	<version>3.x.0 Beta</version>
	<description>A small Plugin to Output a specific Joomla Version.</description>
	<files>
		<filename plugin="jooag_joomlaversion">jooag_joomlaversion.php</filename>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="versionarray" type="textarea" default="1.0.15|1.5.26|1.6.4|1.7.5|2.5.27|3.0.3|3.1.1|3.2.6|3.3.6" label="Versions Array" description="" rows="5" cols="50" />
			</fieldset>
		</fields>
	</config>
</extension>
